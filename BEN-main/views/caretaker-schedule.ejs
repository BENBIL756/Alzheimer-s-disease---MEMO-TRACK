<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Caretaker Schedule - MEMO TRACK</title>
</head>
<body>
  <div class="container mt-4">
    <h2>Assign Medication & Songs to Patients</h2>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>

    <div class="row">
      <div class="col-md-6">
        <h4>Assign Medication</h4>
        <form action="/caretaker/assign-med" method="POST">
          <div class="mb-3">
            <label for="patientId" class="form-label">Patient</label>
            <select required name="patientId" id="patientId" class="form-select">
              <option value="">-- Select patient --</option>
              <% patients.forEach(p=> { %>
                <option value="<%= p.id || p._id %>"><%= p.username %> &lt;<%= p.email %>&gt;</option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="medName" class="form-label">Medication name</label>
            <input class="form-control" type="text" name="medName" id="medName" required />
          </div>
          <div class="mb-3">
            <label for="dose" class="form-label">Dose (optional)</label>
            <input class="form-control" type="text" name="dose" id="dose" />
          </div>
          <div class="mb-3">
            <label for="time" class="form-label">Time (HH:MM or description)</label>
            <input class="form-control" type="text" name="time" id="time" required />
          </div>
          <button class="btn btn-primary" type="submit">Assign Medication</button>
        </form>
      </div>

      <div class="col-md-6">
        <h4>Assign Song</h4>
        <form action="/caretaker/assign-song" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="patientIdSong" class="form-label">Patient</label>
            <select required name="patientId" id="patientIdSong" class="form-select">
              <option value="">-- Select patient --</option>
              <% patients.forEach(p=> { %>
                <option value="<%= p.id || p._id %>"><%= p.username %> &lt;<%= p.email %>&gt;</option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Song Title (optional)</label>
            <input class="form-control" type="text" name="title" id="title" />
          </div>
          <div class="mb-3">
            <label for="url" class="form-label">Song URL (mp3/ogg) (optional)</label>
            <input class="form-control" type="url" name="url" id="url" />
          </div>
          <div class="mb-3">
            <label for="songFile" class="form-label">Or upload a file</label>
            <input class="form-control" type="file" name="songFile" id="songFile" accept="audio/*" />
          </div>
          <button class="btn btn-secondary" type="submit">Assign Song</button>
        </form>
      </div>
    </div>
    <hr />
    <div class="row mt-3">
      <div class="col-md-8">
        <h4>Create Calendar Event for a Patient</h4>
        <form action="/caretaker/create-event" method="POST">
          <div class="mb-3">
            <label for="patientIdEvent" class="form-label">Patient</label>
            <select required name="patientId" id="patientIdEvent" class="form-select">
              <option value="">-- Select patient --</option>
              <% patients.forEach(p=> { %>
                <option value="<%= p.id || p._id %>"><%= p.username %> &lt;<%= p.email %>&gt;</option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="event" class="form-label">Event title</label>
            <input class="form-control" type="text" name="event" id="event" required />
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input class="form-control" type="date" name="date" id="date" required />
          </div>
          <div class="mb-3">
            <label for="date_end" class="form-label">End date (optional)</label>
            <input class="form-control" type="date" name="date_end" id="date_end" />
          </div>
          <button class="btn btn-outline-primary" type="submit">Create Event</button>
        </form>
      </div>
    </div>

    <hr />
    <h4>Your Patients</h4>
    <ul class="list-group">
      <% patients.forEach(p=> { %>
        <li class="list-group-item">
          <strong><%= p.username %></strong> &ndash; <%= p.email %>
          <div>
            Medications: <%=(Array.isArray(p.medications) && p.medications.length)? p.medications.length : 0 %>
            &nbsp;|&nbsp; Assigned Songs: <%=(Array.isArray(p.assignedSongs) && p.assignedSongs.length)? p.assignedSongs.length : 0 %>
          </div>
        </li>
      <% }) %>
    </ul>

  </div>
</body>
</html>