  <script>
    // Fetch notifications (medications and assigned songs)
    async function loadNotifications() {
      try {
        const res = await fetch('/api/notifications');
        if (!res.ok) throw new Error('Failed to fetch');
        const data = await res.json();
        const meds = data.medications || [];
        const songs = data.assignedSongs || [];
        const medList = document.getElementById('medList');
        if (meds.length === 0) medList.innerHTML = '<p>No upcoming medications.</p>';
        else medList.innerHTML = '<ul>' + meds.map(m => `<li><strong>${m.medName}</strong> ${m.dose? '('+m.dose+')' : ''} - ${m.time}</li>`).join('') + '</ul>';

        const songList = document.getElementById('songList');
        if (songs.length === 0) songList.innerHTML = '<p>No assigned songs.</p>';
        else songList.innerHTML = songs.map(s => `
          <div class="assigned-song mb-2">
            <div><strong>${s.title || 'Untitled'}</strong></div>
            <audio controls src="${s.url}" preload="none" style="width:100%;"></audio>
          </div>
        `).join('');
      } catch (e) {
        document.getElementById('medList').innerText = 'Could not load notifications';
        document.getElementById('songList').innerText = 'Could not load songs';
      }
    }
    loadNotifications();
  </script>

